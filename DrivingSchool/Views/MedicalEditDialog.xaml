<Window x:Class="DrivingSchool.Views.MedicalEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование медицинской справки" 
        Height="500" 
        Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                   Text="{Binding Title, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Студент -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Студент:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="StudentNameTextBox" Grid.Row="1" Grid.Column="1" 
                 IsReadOnly="True" Background="#F0F0F0"
                 Margin="0,5" Padding="5"/>

        <!-- Серия -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Серия:*" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="SeriesTextBox" Grid.Row="2" Grid.Column="1" 
                 Text="{Binding Series, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,5" Padding="5" MaxLength="10"/>

        <!-- Номер -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Номер:*" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="NumberTextBox" Grid.Row="3" Grid.Column="1" 
                 Text="{Binding Number, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,5" Padding="5" MaxLength="10"/>

        <!-- Дата выдачи -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Дата выдачи:*" VerticalAlignment="Center" Margin="0,5"/>
        <DatePicker x:Name="IssueDatePicker" Grid.Row="4" Grid.Column="1" 
                    SelectedDate="{Binding IssueDate}"
                    Margin="0,5" Padding="5" Height="30"/>

        <!-- Действительна до -->
        <TextBlock Grid.Row="5" Grid.Column="0" Text="Действительна до:*" VerticalAlignment="Center" Margin="0,5"/>
        <DatePicker x:Name="ValidUntilPicker" Grid.Row="5" Grid.Column="1" 
                    SelectedDate="{Binding ValidUntil}"
                    Margin="0,5" Padding="5" Height="30"/>

        <!-- Медицинское учреждение -->
        <TextBlock Grid.Row="6" Grid.Column="0" Text="Мед. учреждение:*" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="InstitutionTextBox" Grid.Row="6" Grid.Column="1" 
                 Text="{Binding MedicalInstitution, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,5" Padding="5" MaxLength="200"/>

        <!-- Категории -->
        <TextBlock Grid.Row="7" Grid.Column="0" Text="Категории:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="CategoriesTextBox" Grid.Row="7" Grid.Column="1" 
                 Text="{Binding Categories, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,5" Padding="5" MaxLength="50"
                 ToolTip="Например: A, B, C"/>

        <!-- Регион -->
        <TextBlock Grid.Row="8" Grid.Column="0" Text="Регион:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="RegionTextBox" Grid.Row="8" Grid.Column="1" 
                 Text="{Binding Region, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,5" Padding="5" MaxLength="100"/>

        <!-- Информация о сроке действия -->
        <Border Grid.Row="9" Grid.ColumnSpan="2" Background="#FFF3E0" Padding="10" CornerRadius="5" Margin="0,10">
            <TextBlock x:Name="ValidityInfoText" 
                       Text="Медицинская справка действительна 1 год для категорий A, B, M и 2 года для C, D, CE, DE"
                       Foreground="#E65100" FontSize="11" TextWrapping="Wrap"/>
        </Border>

        <!-- Кнопки -->
        <StackPanel Grid.Row="11" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Сохранить" 
                    Click="SaveButton_Click" 
                    Width="100" Height="35" 
                    Background="#4CAF50" Foreground="White"
                    Margin="0,0,10,0"/>
            <Button Content="Отмена" 
                    Click="CancelButton_Click" 
                    Width="100" Height="35" 
                    Background="#f44336" Foreground="White"/>
        </StackPanel>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="* - обязательные поля" 
                   Foreground="Gray" FontSize="11" HorizontalAlignment="Right" Margin="0,0,0,20"/>
    </Grid>
</Window>