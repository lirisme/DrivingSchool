<Window x:Class="DrivingSchool.Views.DrivingLicenseEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование водительского удостоверения" 
        Height="550" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                   Text="{Binding Title, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Студент -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Студент:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="StudentNameTextBox" Grid.Row="1" Grid.Column="1" 
                 IsReadOnly="True" Background="#F0F0F0"
                 Margin="0,5" Padding="5"/>

        <!-- Серия -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Серия:*" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="SeriesTextBox" Grid.Row="2" Grid.Column="1" 
                 Text="{Binding Series, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,5" Padding="5" MaxLength="10"/>

        <!-- Номер -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Номер:*" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="NumberTextBox" Grid.Row="3" Grid.Column="1" 
                 Text="{Binding Number, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,5" Padding="5" MaxLength="10"/>

        <!-- Категории -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Категории:*" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="CategoriesTextBox" Grid.Row="4" Grid.Column="1" 
                 Text="{Binding LicenseCateg, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,5" Padding="5" MaxLength="50"
                 ToolTip="Например: A, B, C"/>

        <!-- Кем выдан -->
        <TextBlock Grid.Row="5" Grid.Column="0" Text="Кем выдан:*" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="IssuedByTextBox" Grid.Row="5" Grid.Column="1" 
                 Text="{Binding IssuedBy, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,5" Padding="5" MaxLength="200" TextWrapping="Wrap" Height="60"/>

        <!-- Код подразделения -->
        <TextBlock Grid.Row="6" Grid.Column="0" Text="Код подразделения:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="DivisionCodeTextBox" Grid.Row="6" Grid.Column="1" 
                 Text="{Binding DivisionCode, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,5" Padding="5" MaxLength="10"/>

        <!-- Дата выдачи -->
        <TextBlock Grid.Row="7" Grid.Column="0" Text="Дата выдачи:*" VerticalAlignment="Center" Margin="0,5"/>
        <DatePicker x:Name="IssueDatePicker" Grid.Row="7" Grid.Column="1" 
                    SelectedDate="{Binding IssueDate}"
                    Margin="0,5" Padding="5" Height="30"/>

        <!-- Дата окончания -->
        <TextBlock Grid.Row="8" Grid.Column="0" Text="Действительно до:*" VerticalAlignment="Center" Margin="0,5"/>
        <DatePicker x:Name="ExpiryDatePicker" Grid.Row="8" Grid.Column="1" 
                    SelectedDate="{Binding ExpiryDate}"
                    Margin="0,5" Padding="5" Height="30"/>

        <!-- Стаж (авто) -->
        <TextBlock Grid.Row="9" Grid.Column="0" Text="Стаж (лет):" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="ExperienceTextBox" Grid.Row="9" Grid.Column="1" 
                 Text="{Binding ExperienceYears}" IsReadOnly="True"
                 Margin="0,5" Padding="5" Background="#F0F0F0"/>

        <!-- Статус -->
        <TextBlock Grid.Row="10" Grid.Column="0" Text="Статус:" VerticalAlignment="Center" Margin="0,5"/>
        <ComboBox x:Name="StatusComboBox" Grid.Row="10" Grid.Column="1" 
                  SelectedValuePath="Content" SelectedValue="{Binding Status}"
                  Margin="0,5" Padding="5" Height="30">
            <ComboBoxItem Content="Действительно" IsSelected="True"/>
            <ComboBoxItem Content="Просрочено"/>
            <ComboBoxItem Content="Утеряно"/>
            <ComboBoxItem Content="Заменено"/>
        </ComboBox>

        <!-- Информация -->
        <Border Grid.Row="11" Grid.ColumnSpan="2" Background="#E3F2FD" Padding="10" CornerRadius="5" Margin="0,10">
            <TextBlock x:Name="InfoTextBlock" 
                       Text="Водительское удостоверение действительно 10 лет. Стаж рассчитывается автоматически от даты выдачи."
                       Foreground="#0D47A1" FontSize="11" TextWrapping="Wrap"/>
        </Border>

        <!-- Кнопки -->
        <StackPanel Grid.Row="13" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Сохранить" 
                    Click="SaveButton_Click" 
                    Width="100" Height="35" 
                    Background="#4CAF50" Foreground="White"
                    Margin="0,0,10,0"/>
            <Button Content="Отмена" 
                    Click="CancelButton_Click" 
                    Width="100" Height="35" 
                    Background="#f44336" Foreground="White"/>
        </StackPanel>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="* - обязательные поля" 
                   Foreground="Gray" FontSize="11" HorizontalAlignment="Right" Margin="0,0,0,20"/>
    </Grid>
</Window>