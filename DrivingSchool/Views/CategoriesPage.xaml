<Page x:Class="DrivingSchool.Views.CategoriesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Категории транспортных средств"
      Background="White">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель с кнопками -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="AddCategoryButton" 
                    Content="➕ Добавить категорию" 
                    Click="AddCategory_Click"
                    Width="150" Height="35" 
                    Background="#4CAF50" Foreground="White"
                    Margin="0,0,10,0"/>

            <Button x:Name="EditCategoryButton" 
                    Content="✏️ Редактировать" 
                    Click="EditCategory_Click"
                    Width="120" Height="35" 
                    Background="#2196F3" Foreground="White"
                    Margin="0,0,10,0" IsEnabled="False"/>

            <Button x:Name="DeleteCategoryButton" 
                    Content="🗑️ Удалить" 
                    Click="DeleteCategory_Click"
                    Width="100" Height="35" 
                    Background="#f44336" Foreground="White"
                    Margin="0,0,10,0" IsEnabled="False"/>

            <Button x:Name="ViewCategoryButton" 
                    Content="👁️ Просмотр" 
                    Click="ViewCategory_Click"
                    Width="100" Height="35" 
                    Background="#9C27B0" Foreground="White" 
                    Margin="0,0,10,0" IsEnabled="False"/>
        </StackPanel>

        <!-- Таблица с категориями -->
        <DataGrid x:Name="CategoriesGrid" 
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionChanged="CategoriesGrid_SelectionChanged"
                  MouseDoubleClick="CategoriesGrid_MouseDoubleClick"
                  Margin="0,0,0,10">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Код" Binding="{Binding Code}" Width="100"/>
                <DataGridTextColumn Header="Название категории" Binding="{Binding FullName}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Нижняя панель с информацией -->
        <Border Grid.Row="2" Background="#F0F8FF" Padding="10" CornerRadius="5">
            <StackPanel>
                <TextBlock x:Name="InfoText" Text="Выберите категорию для просмотра или редактирования" 
                          FontStyle="Italic" Foreground="#666666"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>