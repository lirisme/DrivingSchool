<Page x:Class="DrivingSchool.Views.GroupsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Учебные группы"
      Background="White">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Учебные группы" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- Первый ряд кнопок - поиск и основные операции -->
        <WrapPanel Grid.Row="1" Margin="0,0,0,5">
            <TextBox x:Name="SearchTextBox" 
                     Width="300" Height="30" 
                     Padding="5" 
                     TextChanged="SearchTextBox_TextChanged"
                     ToolTip="Поиск по номеру группы или статусу"
                     Margin="0,0,5,0"/>

            <Button x:Name="ClearSearchButton" 
                    Content="✕" 
                    Width="30" Height="30" 
                    Click="ClearSearch_Click"
                    Margin="0,0,20,0"
                    ToolTip="Очистить поиск"/>

            <Button x:Name="AddGroupButton" 
                    Content="➕ Создать группу" 
                    Click="AddGroup_Click"
                    Width="150" Height="35" 
                    Background="#4CAF50" Foreground="White"
                    Margin="0,0,10,0"
                    ToolTip="Создать новую учебную группу"/>

            <Button x:Name="EditGroupButton" 
                    Content="✏️ Редактировать" 
                    Click="EditGroup_Click"
                    Width="130" Height="35" 
                    Background="#2196F3" Foreground="White"
                    Margin="0,0,10,0" IsEnabled="False"
                    ToolTip="Редактировать выбранную группу"/>

            <Button x:Name="DeleteGroupButton" 
                    Content="🗑️ Удалить" 
                    Click="DeleteGroup_Click"
                    Width="100" Height="35" 
                    Background="#f44336" Foreground="White"
                    Margin="0,0,10,0" IsEnabled="False"
                    ToolTip="Удалить выбранную группу (только если нет студентов)"/>
        </WrapPanel>

        <!-- Второй ряд кнопок - управление студентами в группе -->
        <WrapPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Управление студентами:" 
                       VerticalAlignment="Center" 
                       FontWeight="SemiBold" 
                       Margin="0,0,15,0"
                       Foreground="#2C3E50"/>

            <Button x:Name="ViewStudentsButton" 
                    Content="👥 Просмотр студентов" 
                    Click="ViewStudents_Click"
                    Width="150" Height="35" 
                    Background="#9C27B0" Foreground="White" 
                    Margin="0,0,10,0" IsEnabled="False"
                    ToolTip="Просмотреть список студентов в группе"/>

            <Button x:Name="AddStudentButton" 
                    Content="➕ Добавить студента" 
                    Click="AddStudentToGroup_Click"
                    Width="150" Height="35" 
                    Background="#FF9800" Foreground="White" 
                    Margin="0,0,10,0" IsEnabled="False"
                    ToolTip="Добавить студента в группу"/>

            <Button x:Name="RemoveStudentButton" 
                    Content="➖ Удалить студента" 
                    Click="RemoveStudentFromGroup_Click"
                    Width="150" Height="35" 
                    Background="#FF5722" Foreground="White" 
                    Margin="0,0,10,0" IsEnabled="False"
                    ToolTip="Удалить студента из группы"/>

            <Button x:Name="MoveStudentButton" 
                    Content="🔄 Переместить" 
                    Click="MoveStudentToGroup_Click"
                    Width="120" Height="35" 
                    Background="#00BCD4" Foreground="White" 
                    IsEnabled="False"
                    ToolTip="Переместить студента в другую группу"/>
        </WrapPanel>

        <!-- Таблица с группами -->
        <DataGrid x:Name="GroupsGrid" 
                  Grid.Row="3"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionChanged="GroupsGrid_SelectionChanged"
                  MouseDoubleClick="GroupsGrid_MouseDoubleClick"
                  Margin="0,0,0,10">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Номер группы" Binding="{Binding Name}" Width="150"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding Category}" Width="150"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="100"/>
                <DataGridTextColumn Header="Дата начала" Binding="{Binding StartDate, StringFormat={}{0:dd.MM.yyyy}}" Width="100"/>
                <DataGridTextColumn Header="Дата окончания" Binding="{Binding EndDate, StringFormat={}{0:dd.MM.yyyy}}" Width="100"/>
                <DataGridTextColumn Header="Длительность" Binding="{Binding Duration}" Width="150"/>
                <DataGridTextColumn Header="Студентов" Binding="{Binding StudentCount}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Статусная строка -->
        <Border Grid.Row="4" Background="#F0F8FF" Padding="10" CornerRadius="5">
            <StackPanel>
                <TextBlock x:Name="StatusTextBlock" Text="Загрузка..." FontStyle="Italic" Foreground="#666666"/>
                <TextBlock x:Name="InfoTextBlock" Text="Выберите группу для управления студентами" 
                          FontSize="11" Foreground="#888888" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>