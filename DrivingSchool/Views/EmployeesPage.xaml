<Page x:Class="DrivingSchool.Views.EmployeesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Сотрудники"
      Background="White">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Сотрудники" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- Панель поиска и кнопок -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="SearchTextBox" 
                     Width="300" Height="30" 
                     Padding="5" 
                     TextChanged="SearchTextBox_TextChanged"
                     ToolTip="Поиск по фамилии, имени, должности или телефону"/>

            <Button x:Name="ClearSearchButton" 
                    Content="✕" 
                    Width="30" Height="30" 
                    Click="ClearSearch_Click"
                    Margin="5,0,20,0"/>

            <Button x:Name="AddEmployeeButton" 
                    Content="➕ Добавить сотрудника" 
                    Click="AddEmployee_Click"
                    Width="180" Height="35" 
                    Background="#4CAF50" Foreground="White"
                    Margin="0,0,10,0"/>

            <Button x:Name="EditEmployeeButton" 
                    Content="✏️ Редактировать" 
                    Click="EditEmployee_Click"
                    Width="130" Height="35" 
                    Background="#2196F3" Foreground="White"
                    Margin="0,0,10,0" IsEnabled="False"/>

            <Button x:Name="DeleteEmployeeButton" 
                    Content="🗑️ Удалить" 
                    Click="DeleteEmployee_Click"
                    Width="100" Height="35" 
                    Background="#f44336" Foreground="White"
                    Margin="0,0,10,0" IsEnabled="False"/>

            <Button x:Name="ViewEmployeeButton" 
                    Content="👁️ Просмотр" 
                    Click="ViewEmployee_Click"
                    Width="100" Height="35" 
                    Background="#9C27B0" Foreground="White" 
                    IsEnabled="False"/>
        </StackPanel>

        <!-- Таблица с сотрудниками -->
        <DataGrid x:Name="EmployeesGrid" 
                  Grid.Row="2"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionChanged="EmployeesGrid_SelectionChanged"
                  MouseDoubleClick="EmployeesGrid_MouseDoubleClick"
                  Margin="0,0,0,10">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" Width="120"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" Width="120"/>
                <DataGridTextColumn Header="Отчество" Binding="{Binding MiddleName}" Width="120"/>
                <DataGridTextColumn Header="Должность" Binding="{Binding Position}" Width="150"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="100"/>
                <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="120"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="150"/>
                <DataGridTextColumn Header="Дата приема" Binding="{Binding HireDate, StringFormat={}{0:dd.MM.yyyy}}" Width="100"/>
                <DataGridTextColumn Header="Стаж" Binding="{Binding Experience}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Статусная строка -->
        <Border Grid.Row="3" Background="#F0F8FF" Padding="10" CornerRadius="5">
            <TextBlock x:Name="StatusTextBlock" Text="Загрузка..." FontStyle="Italic" Foreground="#666666"/>
        </Border>
    </Grid>
</Page>