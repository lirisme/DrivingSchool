<Page x:Class="DrivingSchool.Views.AddressDataPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Адреса регистрации"
      Background="White">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Адреса регистрации учащихся" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- Панель поиска студента -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Студент:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
            <TextBox x:Name="SearchTextBox" 
                     Width="300" Height="30" 
                     Padding="5" 
                     TextChanged="SearchTextBox_TextChanged"
                     ToolTip="Введите фамилию или телефон студента"/>

            <Button x:Name="ClearSearchButton" 
                    Content="✕" 
                    Width="30" Height="30" 
                    Click="ClearSearch_Click"
                    Margin="5,0,0,0"/>
        </StackPanel>

        <!-- Результаты поиска студентов -->
        <ListBox x:Name="SearchResultsListBox" 
                 Grid.Row="2" 
                 MaxHeight="150"
                 Margin="130,0,0,10"
                 Visibility="Collapsed"
                 DisplayMemberPath="FullName"
                 SelectionChanged="SearchResultsListBox_SelectionChanged"
                 Background="White" BorderBrush="#CCCCCC"/>

        <!-- Выбранный студент -->
        <Border x:Name="SelectedStudentPanel" 
                Grid.Row="2" 
                Background="#E3F2FD" 
                Padding="10" 
                CornerRadius="5" 
                Margin="0,0,0,10"
                Visibility="Collapsed">
            <StackPanel>
                <TextBlock x:Name="SelectedStudentText" FontWeight="Bold" FontSize="14"/>
                <TextBlock x:Name="SelectedStudentDetails" FontSize="12" Foreground="#666666" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Панель кнопок -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Right">
            <Button x:Name="AddAddressButton" 
                    Content="➕ Добавить адрес" 
                    Click="AddAddress_Click"
                    Width="150" Height="35" 
                    Background="#4CAF50" Foreground="White"
                    Margin="0,0,10,0" IsEnabled="False"/>

            <Button x:Name="EditAddressButton" 
                    Content="✏️ Редактировать" 
                    Click="EditAddress_Click"
                    Width="130" Height="35" 
                    Background="#2196F3" Foreground="White"
                    Margin="0,0,10,0" IsEnabled="False"/>

            <Button x:Name="DeleteAddressButton" 
                    Content="🗑️ Удалить" 
                    Click="DeleteAddress_Click"
                    Width="100" Height="35" 
                    Background="#f44336" Foreground="White"
                    Margin="0,0,10,0" IsEnabled="False"/>

            <Button x:Name="ViewAddressButton" 
                    Content="👁️ Просмотр" 
                    Click="ViewAddress_Click"
                    Width="100" Height="35" 
                    Background="#9C27B0" Foreground="White" 
                    IsEnabled="False"/>

            <Button x:Name="PrintAddressButton" 
                    Content="🖨️ Печать" 
                    Click="PrintAddress_Click"
                    Width="100" Height="35" 
                    Background="#607D8B" Foreground="White" 
                    IsEnabled="False"/>
        </StackPanel>

        <!-- Таблица с адресами -->
        <DataGrid x:Name="AddressGrid" 
                  Grid.Row="4"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionChanged="AddressGrid_SelectionChanged"
                  MouseDoubleClick="AddressGrid_MouseDoubleClick"
                  Margin="0,0,0,10">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Студент" Binding="{Binding StudentName}" Width="200"/>
                <DataGridTextColumn Header="Регион" Binding="{Binding Region}" Width="150"/>
                <DataGridTextColumn Header="Город" Binding="{Binding City}" Width="150"/>
                <DataGridTextColumn Header="Улица" Binding="{Binding Street}" Width="150"/>
                <DataGridTextColumn Header="Дом" Binding="{Binding House}" Width="80"/>
                <DataGridTextColumn Header="Корпус" Binding="{Binding Building}" Width="80"/>
                <DataGridTextColumn Header="Квартира" Binding="{Binding Apartment}" Width="80"/>
                <DataGridTextColumn Header="Индекс" Binding="{Binding PostalCode}" Width="80"/>
                <DataGridTextColumn Header="Краткий адрес" Binding="{Binding ShortAddress}" Width="250"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Информационная панель -->
        <Border Grid.Row="5" Background="#F0F8FF" Padding="10" CornerRadius="5">
            <TextBlock x:Name="InfoTextBlock" Text="Выберите студента для работы с адресом регистрации" 
                      FontStyle="Italic" Foreground="#666666"/>
        </Border>
    </Grid>
</Page>