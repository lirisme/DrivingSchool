<Page x:Class="DrivingSchool.Views.TariffsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Тарифы обучения"
      Background="White">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Тарифы обучения" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- Панель кнопок -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="AddTariffButton" 
                    Content="➕ Добавить тариф" 
                    Click="AddTariff_Click"
                    Width="150" Height="35" 
                    Background="#4CAF50" Foreground="White"
                    Margin="0,0,10,0"/>

            <Button x:Name="EditTariffButton" 
                    Content="✏️ Редактировать" 
                    Click="EditTariff_Click"
                    Width="130" Height="35" 
                    Background="#2196F3" Foreground="White"
                    Margin="0,0,10,0" IsEnabled="False"/>

            <Button x:Name="DeleteTariffButton" 
                    Content="🗑️ Удалить" 
                    Click="DeleteTariff_Click"
                    Width="100" Height="35" 
                    Background="#f44336" Foreground="White"
                    Margin="0,0,10,0" IsEnabled="False"/>
        </StackPanel>

        <!-- Таблица с тарифами -->
        <DataGrid x:Name="TariffsGrid" 
                  Grid.Row="2"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionChanged="TariffsGrid_SelectionChanged"
                  MouseDoubleClick="TariffsGrid_MouseDoubleClick"
                  Margin="0,0,0,10">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding Category}" Width="100"/>
                <DataGridTextColumn Header="Длительность (мес)" Binding="{Binding DurationMonths}" Width="120"/>
                <DataGridTextColumn Header="Часов практики" Binding="{Binding PracticeHours}" Width="120"/>
                <DataGridTextColumn Header="Стоимость" Binding="{Binding BaseCost, StringFormat={}{0:N2} руб.}" Width="150"/>
                <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="300"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Статусная строка -->
        <Border Grid.Row="3" Background="#F0F8FF" Padding="10" CornerRadius="5">
            <TextBlock x:Name="StatusTextBlock" Text="Загрузка..." FontStyle="Italic" Foreground="#666666"/>
        </Border>
    </Grid>
</Page>