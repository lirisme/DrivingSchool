<Window x:Class="DrivingSchool.Views.PaymentEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование платежа" 
        Height="350" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                   Text="{Binding Title, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Студент (только для информации) -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Студент:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="StudentNameTextBox" Grid.Row="1" Grid.Column="1" 
                 Text="{Binding StudentName}" IsReadOnly="True"
                 Margin="0,5" Padding="5" Background="#F0F0F0"/>

        <!-- Дата платежа -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Дата платежа:*" VerticalAlignment="Center" Margin="0,5"/>
        <DatePicker x:Name="PaymentDatePicker" Grid.Row="2" Grid.Column="1" 
                    SelectedDate="{Binding PaymentDate}"
                    Margin="0,5" Padding="5" Height="30"/>

        <!-- Сумма -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Сумма:*" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="AmountTextBox" Grid.Row="3" Grid.Column="1" 
                 Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,5" Padding="5" PreviewTextInput="DecimalValidationTextBox"/>

        <!-- Тип платежа -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Тип платежа:" VerticalAlignment="Center" Margin="0,5"/>
        <ComboBox x:Name="PaymentTypeComboBox" Grid.Row="4" Grid.Column="1" 
                  IsEditable="True"
                  Text="{Binding PaymentType}"
                  Margin="0,5" Padding="5" Height="30">
            <ComboBoxItem Content="Наличные"/>
            <ComboBoxItem Content="Банковская карта"/>
            <ComboBoxItem Content="Банковский перевод"/>
            <ComboBoxItem Content="Квитанция Сбербанк"/>
            <ComboBoxItem Content="Материнский капитал"/>
        </ComboBox>

        <!-- Кнопки -->
        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Сохранить" 
                    Click="SaveButton_Click" 
                    Width="100" Height="35" 
                    Background="#4CAF50" Foreground="White"
                    Margin="0,0,10,0"/>
            <Button Content="Отмена" 
                    Click="CancelButton_Click" 
                    Width="100" Height="35" 
                    Background="#f44336" Foreground="White"/>
        </StackPanel>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="* - обязательные поля" 
                   Foreground="Gray" FontSize="11" HorizontalAlignment="Right" Margin="0,0,0,20"/>
    </Grid>
</Window>