<Page x:Class="DrivingSchool.Views.CarsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Автомобили"
      Background="White">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Автомобили" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- Панель поиска и фильтров -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="SearchTextBox" 
                     Width="300" Height="30" 
                     Padding="5" 
                     TextChanged="SearchTextBox_TextChanged"
                     ToolTip="Поиск по марке, модели или госномеру"/>

            <Button x:Name="ClearSearchButton" 
                    Content="✕" 
                    Width="30" Height="30" 
                    Click="ClearSearch_Click"
                    Margin="5,0,20,0"/>

            <Button x:Name="AddCarButton" 
                    Content="➕ Добавить автомобиль" 
                    Click="AddCar_Click"
                    Width="180" Height="35" 
                    Background="#4CAF50" Foreground="White"
                    Margin="0,0,10,0"/>

            <Button x:Name="EditCarButton" 
                    Content="✏️ Редактировать" 
                    Click="EditCar_Click"
                    Width="130" Height="35" 
                    Background="#2196F3" Foreground="White"
                    Margin="0,0,10,0" IsEnabled="False"/>

            <Button x:Name="DeleteCarButton" 
                    Content="🗑️ Удалить" 
                    Click="DeleteCar_Click"
                    Width="100" Height="35" 
                    Background="#f44336" Foreground="White"
                    Margin="0,0,10,0" IsEnabled="False"/>

            <Button x:Name="ActiveButton" 
                    Content="Активные" 
                    Click="ShowActive_Click"
                    Width="90" Height="35" 
                    Background="#4CAF50" Foreground="White"
                    Margin="0,0,5,0"/>

            <Button x:Name="InactiveButton" 
                    Content="Все" 
                    Click="ShowInactive_Click"
                    Width="90" Height="35" 
                    Background="#9E9E9E" Foreground="White"/>
        </StackPanel>

        <!-- Таблица с автомобилями -->
        <DataGrid x:Name="CarsGrid" 
                  Grid.Row="2"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionChanged="CarsGrid_SelectionChanged"
                  MouseDoubleClick="CarsGrid_MouseDoubleClick"
                  Margin="0,0,0,10">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Марка" Binding="{Binding Brand}" Width="120"/>
                <DataGridTextColumn Header="Модель" Binding="{Binding Model}" Width="120"/>
                <DataGridTextColumn Header="Госномер" Binding="{Binding LicensePlate}" Width="120"/>
                <DataGridTextColumn Header="Год" Binding="{Binding Year}" Width="60"/>
                <DataGridTextColumn Header="Цвет" Binding="{Binding Color}" Width="100"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding Category}" Width="80"/>
                <DataGridTextColumn Header="Инструктор" Binding="{Binding InstructorName}" Width="150"/>
                <DataGridCheckBoxColumn Header="Активен" Binding="{Binding IsActive}" Width="70"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Статусная строка -->
        <Border Grid.Row="3" Background="#F0F8FF" Padding="10" CornerRadius="5">
            <TextBlock x:Name="StatusTextBlock" Text="Загрузка..." FontStyle="Italic" Foreground="#666666"/>
        </Border>
    </Grid>
</Page>