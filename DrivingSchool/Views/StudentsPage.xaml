<Page x:Class="DrivingSchool.Views.StudentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Учащиеся"
      Background="White">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Учащиеся" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- Панель поиска и кнопок -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="SearchTextBox" 
                     Width="300" Height="30" 
                     Padding="5" 
                     TextChanged="SearchTextBox_TextChanged"
                     ToolTip="Поиск по фамилии, имени, телефону"/>

            <Button x:Name="ClearSearchButton" 
                    Content="✕" 
                    Width="30" Height="30" 
                    Click="ClearSearch_Click"
                    Margin="5,0,20,0"/>

            <Button x:Name="AddStudentButton" 
                    Content="➕ Добавить учащегося" 
                    Click="AddStudent_Click"
                    Width="160" Height="35" 
                    Background="#4CAF50" Foreground="White"
                    Margin="0,0,10,0"/>

            <Button x:Name="EditStudentButton" 
                    Content="✏️ Редактировать" 
                    Click="EditStudent_Click"
                    Width="130" Height="35" 
                    Background="#2196F3" Foreground="White"
                    Margin="0,0,10,0" IsEnabled="False"/>

            <Button x:Name="DeleteStudentButton" 
                    Content="🗑️ Удалить" 
                    Click="DeleteStudent_Click"
                    Width="100" Height="35" 
                    Background="#f44336" Foreground="White"
                    Margin="0,0,10,0" IsEnabled="False"/>

            <Button x:Name="ViewStudentButton" 
                    Content="👁️ Просмотр" 
                    Click="ViewStudent_Click"
                    Width="100" Height="35" 
                    Background="#9C27B0" Foreground="White" 
                    Margin="0,0,10,0" IsEnabled="False"/>

            <Button x:Name="DocumentsButton" 
                    Content="📄 Документы" 
                    Click="DocumentsButton_Click"
                    Width="120" Height="35" 
                    Background="#FF9800" Foreground="White" 
                    Margin="0,0,10,0" IsEnabled="False"/>

            <Button x:Name="PaymentsButton" 
                    Content="💰 Оплаты" 
                    Click="PaymentsButton_Click"
                    Width="100" Height="35" 
                    Background="#00BCD4" Foreground="White" 
                    IsEnabled="False"/>
        </StackPanel>

        <!-- Таблица с учащимися -->
        <DataGrid x:Name="StudentsGrid" 
                  Grid.Row="2"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionChanged="StudentsGrid_SelectionChanged"
                  MouseDoubleClick="StudentsGrid_MouseDoubleClick"
                  Margin="0,0,0,10">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" Width="120"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" Width="120"/>
                <DataGridTextColumn Header="Отчество" Binding="{Binding MiddleName}" Width="120"/>
                <DataGridTextColumn Header="Дата рождения" Binding="{Binding BirthDate, StringFormat={}{0:dd.MM.yyyy}}" Width="100"/>
                <DataGridTextColumn Header="Возраст" Binding="{Binding Age}" Width="60"/>
                <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="120"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="150"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding CategoryCode}" Width="80"/>
                <DataGridTextColumn Header="Группа" Binding="{Binding GroupName}" Width="100"/>
                <DataGridTextColumn Header="Инструктор" Binding="{Binding InstructorName}" Width="150"/>
                <DataGridTextColumn Header="Автомобиль" Binding="{Binding CarInfo}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Статусная строка -->
        <Border Grid.Row="3" Background="#F0F8FF" Padding="10" CornerRadius="5">
            <StackPanel>
                <TextBlock x:Name="StatusTextBlock" Text="Загрузка..." FontStyle="Italic" Foreground="#666666"/>
                <TextBlock x:Name="InfoTextBlock" Text="Выберите учащегося для просмотра документов" 
                          FontSize="11" Foreground="#888888" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>