<Window x:Class="DrivingSchool.Views.TariffEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование тарифа" 
        Height="500" 
        Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                   Text="{Binding Title, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Название тарифа -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Название:*" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="NameTextBox" Grid.Row="1" Grid.Column="1" 
                 Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,5" Padding="5" MaxLength="100"/>

        <!-- Категория -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Категория:" VerticalAlignment="Center" Margin="0,5"/>
        <ComboBox x:Name="CategoryComboBox" Grid.Row="2" Grid.Column="1" 
                  IsEditable="True"
                  Text="{Binding Category}"
                  Margin="0,5" Padding="5" Height="30">
            <ComboBoxItem Content="A"/>
            <ComboBoxItem Content="B"/>
            <ComboBoxItem Content="C"/>
            <ComboBoxItem Content="D"/>
            <ComboBoxItem Content="BE"/>
            <ComboBoxItem Content="CE"/>
            <ComboBoxItem Content="DE"/>
            <ComboBoxItem Content="M"/>
        </ComboBox>

        <!-- Длительность (месяцев) -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Длительность (мес):*" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="DurationTextBox" Grid.Row="3" Grid.Column="1" 
                 Text="{Binding DurationMonths, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,5" Padding="5" MaxLength="3"
                 PreviewTextInput="NumberValidationTextBox"/>

        <!-- Часов практики -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Часов практики:*" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="PracticeHoursTextBox" Grid.Row="4" Grid.Column="1" 
                 Text="{Binding PracticeHours, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,5" Padding="5" MaxLength="3"
                 PreviewTextInput="NumberValidationTextBox"/>

        <!-- Стоимость -->
        <TextBlock Grid.Row="5" Grid.Column="0" Text="Стоимость:*" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="CostTextBox" Grid.Row="5" Grid.Column="1" 
                 Text="{Binding BaseCost, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,5" Padding="5"
                 PreviewTextInput="DecimalValidationTextBox"/>

        <!-- Описание -->
        <TextBlock Grid.Row="6" Grid.Column="0" Text="Описание:" VerticalAlignment="Top" Margin="0,5"/>
        <TextBox x:Name="DescriptionTextBox" Grid.Row="6" Grid.Column="1" 
                 Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,5" Padding="5" MaxLength="500" 
                 TextWrapping="Wrap" AcceptsReturn="True" Height="80"/>

        <!-- Информация -->
        <Border Grid.Row="7" Grid.ColumnSpan="2" Background="#E3F2FD" Padding="10" CornerRadius="5" Margin="0,10">
            <TextBlock Text="Тариф используется для расчета стоимости обучения студентов"
                       Foreground="#0D47A1" FontSize="11" TextWrapping="Wrap"/>
        </Border>

        <!-- Кнопки -->
        <StackPanel Grid.Row="9" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Сохранить" 
                    Click="SaveButton_Click" 
                    Width="100" Height="35" 
                    Background="#4CAF50" Foreground="White"
                    Margin="0,0,10,0"/>
            <Button Content="Отмена" 
                    Click="CancelButton_Click" 
                    Width="100" Height="35" 
                    Background="#f44336" Foreground="White"/>
        </StackPanel>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="* - обязательные поля" 
                   Foreground="Gray" FontSize="11" HorizontalAlignment="Right" Margin="0,0,0,20"/>
    </Grid>
</Window>