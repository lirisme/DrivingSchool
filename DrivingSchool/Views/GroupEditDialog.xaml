<Window x:Class="DrivingSchool.Views.GroupEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование группы" 
        Height="450" 
        Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                   Text="{Binding Title, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Номер группы -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Номер группы:*" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="NameTextBox" Grid.Row="1" Grid.Column="1" 
                 Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,5" Padding="5" MaxLength="50"/>

        <!-- Категория -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Категория:" VerticalAlignment="Center" Margin="0,5"/>
        <ComboBox x:Name="CategoryComboBox" Grid.Row="2" Grid.Column="1" 
                  IsEditable="True"
                  Text="{Binding Category}"
                  Margin="0,5" Padding="5" Height="30">
            <ComboBoxItem Content="A - мотоциклы"/>
            <ComboBoxItem Content="B - легковые автомобили"/>
            <ComboBoxItem Content="C - грузовые автомобили"/>
            <ComboBoxItem Content="D - автобусы"/>
            <ComboBoxItem Content="BE - легковые с прицепом"/>
            <ComboBoxItem Content="CE - грузовые с прицепом"/>
        </ComboBox>

        <!-- Статус -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Статус:" VerticalAlignment="Center" Margin="0,5"/>
        <ComboBox x:Name="StatusComboBox" Grid.Row="3" Grid.Column="1" 
                  SelectedValuePath="Content" SelectedValue="{Binding Status}"
                  Margin="0,5" Padding="5" Height="30">
            <ComboBoxItem Content="Активна" IsSelected="True"/>
            <ComboBoxItem Content="Завершена"/>
            <ComboBoxItem Content="Запланирована"/>
            <ComboBoxItem Content="Отменена"/>
        </ComboBox>

        <!-- Дата начала -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Дата начала:*" VerticalAlignment="Center" Margin="0,5"/>
        <DatePicker x:Name="StartDatePicker" Grid.Row="4" Grid.Column="1" 
                    SelectedDate="{Binding StartDate}"
                    Margin="0,5" Padding="5" Height="30"/>

        <!-- Дата окончания -->
        <TextBlock Grid.Row="5" Grid.Column="0" Text="Дата окончания:*" VerticalAlignment="Center" Margin="0,5"/>
        <DatePicker x:Name="EndDatePicker" Grid.Row="5" Grid.Column="1" 
                    SelectedDate="{Binding EndDate}"
                    Margin="0,5" Padding="5" Height="30"/>

        <!-- Длительность (автоматически) -->
        <TextBlock Grid.Row="6" Grid.Column="0" Text="Длительность:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="DurationTextBox" Grid.Row="6" Grid.Column="1" 
                 Text="{Binding Duration}" IsReadOnly="True"
                 Margin="0,5" Padding="5" Background="#F0F0F0"/>

        <!-- Информация о группе -->
        <Border Grid.Row="7" Grid.ColumnSpan="2" Background="#E3F2FD" Padding="10" CornerRadius="5" Margin="0,10">
            <TextBlock x:Name="InfoTextBlock" Text="Длительность обучения будет рассчитана автоматически" 
                       Foreground="#0D47A1" FontStyle="Italic"/>
        </Border>

        <!-- Кнопки -->
        <StackPanel Grid.Row="9" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Сохранить" 
                    Click="SaveButton_Click" 
                    Width="100" Height="35" 
                    Background="#4CAF50" Foreground="White"
                    Margin="0,0,10,0"/>
            <Button Content="Отмена" 
                    Click="CancelButton_Click" 
                    Width="100" Height="35" 
                    Background="#f44336" Foreground="White"/>
        </StackPanel>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="* - обязательные поля" 
                   Foreground="Gray" FontSize="11" HorizontalAlignment="Right" Margin="0,0,0,20"/>
    </Grid>
</Window>