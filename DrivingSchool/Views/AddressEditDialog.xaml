<Window x:Class="DrivingSchool.Views.AddressEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование адреса регистрации" 
        Height="500" 
        Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                   Text="{Binding Title, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Студент -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Студент:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="StudentNameTextBox" Grid.Row="1" Grid.Column="1" 
                 IsReadOnly="True" Background="#F0F0F0"
                 Margin="0,5" Padding="5"/>

        <!-- Почтовый индекс -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Почтовый индекс:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="PostalCodeTextBox" Grid.Row="2" Grid.Column="1" 
                 Text="{Binding PostalCode, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,5" Padding="5" MaxLength="10"/>

        <!-- Регион -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Регион:*" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="RegionTextBox" Grid.Row="3" Grid.Column="1" 
                 Text="{Binding Region, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,5" Padding="5" MaxLength="100"/>

        <!-- Город/населенный пункт -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Город/населенный пункт:*" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="CityTextBox" Grid.Row="4" Grid.Column="1" 
                 Text="{Binding City, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,5" Padding="5" MaxLength="100"/>

        <!-- Улица -->
        <TextBlock Grid.Row="5" Grid.Column="0" Text="Улица:*" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="StreetTextBox" Grid.Row="5" Grid.Column="1" 
                 Text="{Binding Street, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,5" Padding="5" MaxLength="100"/>

        <!-- Дом -->
        <TextBlock Grid.Row="6" Grid.Column="0" Text="Дом:*" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="HouseTextBox" Grid.Row="6" Grid.Column="1" 
                 Text="{Binding House, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,5" Padding="5" MaxLength="20"/>

        <!-- Корпус/строение -->
        <TextBlock Grid.Row="7" Grid.Column="0" Text="Корпус/строение:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="BuildingTextBox" Grid.Row="7" Grid.Column="1" 
                 Text="{Binding Building, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,5" Padding="5" MaxLength="20"/>

        <!-- Квартира -->
        <TextBlock Grid.Row="8" Grid.Column="0" Text="Квартира:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="ApartmentTextBox" Grid.Row="8" Grid.Column="1" 
                 Text="{Binding Apartment, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,5" Padding="5" MaxLength="20"/>

        <!-- Предпросмотр адреса -->
        <Border Grid.Row="9" Grid.ColumnSpan="2" Background="#E8F5E8" Padding="10" CornerRadius="5" Margin="0,10">
            <StackPanel>
                <TextBlock Text="Предпросмотр адреса:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock x:Name="PreviewTextBlock" Text="{Binding FullAddress}" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Кнопки -->
        <StackPanel Grid.Row="11" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Сохранить" 
                    Click="SaveButton_Click" 
                    Width="100" Height="35" 
                    Background="#4CAF50" Foreground="White"
                    Margin="0,0,10,0"/>
            <Button Content="Отмена" 
                    Click="CancelButton_Click" 
                    Width="100" Height="35" 
                    Background="#f44336" Foreground="White"/>
        </StackPanel>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="* - обязательные поля" 
                   Foreground="Gray" FontSize="11" HorizontalAlignment="Right" Margin="0,0,0,20"/>
    </Grid>
</Window>