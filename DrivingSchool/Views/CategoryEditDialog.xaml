<Window x:Class="DrivingSchool.Views.CategoryEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование категории" 
        Height="250" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                   Text="{Binding Title, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Код -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Код:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="CodeTextBox" Grid.Row="1" Grid.Column="1" 
                 Text="{Binding Code, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,5" Padding="5" MaxLength="10"/>

        <!-- Полное название -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Название:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="FullNameTextBox" Grid.Row="2" Grid.Column="1" 
                 Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,5" Padding="5" MaxLength="100"/>

        <!-- Заполнитель -->
        <TextBlock Grid.Row="3" Grid.ColumnSpan="2" 
                   Text="Пример: B - Легковые автомобили" 
                   Foreground="Gray" FontSize="11" Margin="125,0,0,5"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="5" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Сохранить" 
                    Click="SaveButton_Click" 
                    Width="100" Height="35" 
                    Background="#4CAF50" Foreground="White"
                    Margin="0,0,10,0"/>
            <Button Content="Отмена" 
                    Click="CancelButton_Click" 
                    Width="100" Height="35" 
                    Background="#f44336" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>